#coding:utf-8
<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title, "Назва" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body, "Текст" %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Зберегти статтю' %>
  </p>
<% end %>
#coding:utf-8
<h1><%= @article.title %></h1>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>

<p><%= @article.body %></p>


	

<p>
  <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:medium) %><br/>
  <% end %>
  
</p>




<%= render partial: 'comments/form' %>

<%= link_to "Повернутися до переліку", articles_path %>
<%= link_to "Видалити", article_path(@article), method: :delete, data: {confirm: "ти впевнений?"}
 %>
 <%= link_to "редагувати", edit_article_path(@article) %>